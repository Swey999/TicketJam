@{
    ViewData["Title"] = "Welcome to TicketJam!";
}

<div class="text-center" style="background-color: #f8f9fa; padding: 50px; border-radius: 10px;">

    <div>
        <p>
            <img src="~/images/ticketjamlogo.png" alt="Logo" />
        </p>
    </div>

    <h1 class="display-4" style="color: #2c3e50; font-weight: bold;">Welcome to <span style="color: #e74c3c;">TicketJam</span>!</h1>
    <p style="font-size: 1.25rem; color: #34495e; margin-top: 20px;">
        Your ultimate destination for <strong>concert tickets</strong>. Discover the best live music events and secure your spot for unforgettable experiences.
    </p>
    <p style="margin-top: 30px;">
        <a href="/event" class="btn btn-lg" style="background-color: #e74c3c; color: #fff; font-weight: bold; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
            Browse Events
        </a>
    </p>
    <p style="font-size: 1.25rem; color: #34495e; margin-top: 20px;">
        From Courtside to Row Z, TicketJam’s the Key!
    </p>

    
</div>
