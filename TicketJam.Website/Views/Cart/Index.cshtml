@model TicketJam.Website.APIClient.DTO.Order;
@{
    ViewData["Title"] = "Cart";
}

<div class="text-center" style="width:800px; margin:0px auto;">
    <h1 class="display-4">Cart</h1>
    @if (Model == null || Model.orderLines.Count == 0) //Har ændret dette
    {
        <div class="row">
            <div class="col-12 text-center">
                <h3>Cart is empty</h3>
            </div>
        </div>
    }
    else
    {
        @foreach (var orderLine in Model.orderLines)
        {
            <div class="row" style="padding-top:2px;">
     @*            <div class="col-6">
                    @orderLine.Quantity @orderLine.Ticket.TicketCategory     at $@orderLine.Ticket.Price each
                </div>
                <div class="col-3">
                    total $@(orderLine.Quantity * orderLine.Ticket.Price)
                </div> *@
                <div class="col-3">
                    <a class="btn btn-primary" href="@Url.Action("Add", "Cart", new { id = orderLine.ticketId, quantity = -1 })" title="remove one">-1</a>
                    <a class="btn btn-primary" href="@Url.Action("Add", "Cart", new { id = orderLine.ticketId, quantity = 1 })" title="add one">+1</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Cart", new { id = orderLine.ticketId })" title="delete product"><span class="bi-trash"></span></a>
                </div>
            </div>
        }
    }
    <p></p>
    @* <h3 class="display-6">Total: $@Model.GetTotal()</h3> *@
    <a class="btn btn-danger" href="@Url.Action("EmptyCart", "Cart")">Empty entire cart <span class="bi bi-trash"></span></a>

    <a class="btn btn-success" href="@Url.Action("Create", "Order")">Checkout</a>
</div>